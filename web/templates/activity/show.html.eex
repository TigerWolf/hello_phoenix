<h2>Show activity</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @activity.name %>
  </li>

  <li>
    <strong>Points:</strong>
    <%= @activity.points %>
  </li>

  <li>
    <strong>Event:</strong>
    <%= @activity.event_id %>
  </li>

</ul>

<%= link "Edit", to: activity_path(@conn, :edit, @activity) %>
<%= link "Back", to: activity_path(@conn, :index) %>
