<div class="jumbotron">
  <h4>Reset Password</h4>
  <%= form_for @conn, session_path(@conn, :request_reset), [name: :session], fn f -> %>
  <div class="form-group">
    <label>Email</label>
    <%= text_input f, :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
  <%= end %>
</div>
